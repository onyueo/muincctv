<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_round_black"
    android:backgroundTint="@color/main_white"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_reguler"
            android:textSize="16sp"
            android:text="출입 날짜 :" />

        <TextView
            android:id="@+id/entry_recording_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_reguler"
            android:paddingHorizontal="5dp"
            android:textSize="14sp"
            android:text="2024.09.04" />

        <TextView
            android:id="@+id/entry_recording_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_reguler"
            android:textSize="14sp"
            android:text="00:00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_reguler"
            android:textSize="16sp"
            android:text="출입 허가 :" />

        <TextView
            android:id="@+id/entry_recording_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_reguler"
            android:paddingHorizontal="5dp"
            android:textSize="14sp"
            android:text="도어락" />


    </LinearLayout>

</LinearLayout>
