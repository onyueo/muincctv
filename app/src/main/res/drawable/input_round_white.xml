<?xml version="1.0" encoding="utf-8"?>

<!-- 기본 버튼 세팅-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding android:top="8dp" android:right="1dp" android:bottom="2dp" android:left="1dp"/>
            <corners android:radius="10dp"/>
            <solid android:color="#007D7C7C"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="0dp" android:right="1dp" android:bottom="2dp" android:left="1dp"/>
            <corners android:radius="10dp"/>
            <solid android:color="#107D7C7C"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="0dp" android:right="1dp" android:bottom="2dp" android:left="0dp"/>
            <corners android:radius="10dp"/>
            <solid android:color="#207D7C7C"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="0dp" android:right="1dp" android:bottom="2dp" android:left="0dp"/>
            <corners android:radius="10dp"/>
            <solid android:color="#307D7C7C"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="0dp" android:right="0dp" android:bottom="2dp" android:left="0dp"/>
            <corners android:radius="10dp"/>
            <solid android:color="#507D7C7C"/>
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/main_white"/>
            <corners android:radius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/main_black"/>
        </shape>
    </item>
</layer-list>


