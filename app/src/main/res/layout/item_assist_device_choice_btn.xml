<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/assist_device_choice_btn_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_margin="12dp"
    android:background="@drawable/btn_assist_device_choice"
    android:backgroundTint="@color/main_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
>

        <ImageView
            android:id="@+id/assist_device_choice_btn_img"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/assist_device_choice_btn_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/assist_device_cane_black" />

        <TextView
            android:id="@+id/assist_device_choice_btn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanum_bold"
            android:text="지팡이"
            android:textAlignment="center"
            android:textColor="@color/main_black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/assist_device_choice_btn_img" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>